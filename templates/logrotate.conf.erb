<%= scope.lookupvar('log_path') %> {
	<%= scope.lookupvar('timebased') -%>
	<% if scope.lookupvar('size_based') != "undef" -%>       
	size <%=scope.lookupvar('size_based') %>
	<% end -%>
	<% if scope.lookupvar('retention_period') != "undef" -%>
	rotate<%= scope.lookupvar('retention_period') %>
	<% end -%>
	<% if scope.lookupvar('compress') == "yes" -%>
	compress
	<% end -%>
	<% if scope.lookupvar('delaycompress') == "yes" -%>
        delaycompress
        <% end -%>
	<% if scope.lookupvar('missingok') == "yes" -%>
        missingok
        <% end -%>
	<% if scope.lookupvar('notifempty') == "yes" -%>
        notifempty
        <% end -%>
	<% if scope.lookupvar('user') != "undef" -%>
	create 644 <%= scope.lookupvar('user')%> <%=scope.lookupvar('group')%>
	<% end -%>
}
